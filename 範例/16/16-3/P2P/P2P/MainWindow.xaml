        <ListBox Margin="10,75,10,0" Name="lstPeerNameRecord" Height="130" VerticalAlignment="Top" />
        <Label Content="Peer Name Records:" Height="25" HorizontalAlignment="Left" Margin="10,45,0,0" Name="label2" VerticalAlignment="Top" Width="128" />
        <Button Content="解析" Height="30" HorizontalAlignment="Center" Margin="96,0,92,39" Name="btnResolve" VerticalAlignment="Bottom" Width="90" Click="btnResolve_Click" />
        <ProgressBar Height="20" Name="progressBar" VerticalAlignment="Bottom" Visibility="Hidden" />
    </Grid>
</Window>
