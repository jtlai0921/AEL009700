<Window x:Class="P2P.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="P2P" Height="350" Width="300" WindowStartupLocation="CenterScreen" ResizeMode="CanMinimize">
    <Grid>
        <Label Content="Peer Name:" Height="25" HorizontalAlignment="Left" Margin="10,10,0,0" Name="label1" VerticalAlignment="Top" Width="86" />
        <TextBox Height="22" Margin="88,12,10,0" Name="txtPeerName" VerticalAlignment="Top" />
        <Label Content="Port:" Height="25" HorizontalAlignment="Left" Margin="10,40,0,0" Name="label2" VerticalAlignment="Top" Width="78" />
        <TextBox Height="22" Margin="88,42,10,0" Name="txtPort" VerticalAlignment="Top" />
        <Button Content="註冊PNRP Peer Name" Height="30" HorizontalAlignment="Center" Margin="79,80,67,0" Name="btnRegister" VerticalAlignment="Top" Width="132" Click="btnRegister_Click" />
        <ListBox Margin="10,145,10,56" Name="lstCloud" />
        <Label Content="PRNP Cloud:" Height="25" HorizontalAlignment="Left" Margin="10,120,0,0" Name="label3" VerticalAlignment="Top" Width="110" />
        <Button Content="取得PNRP Cloud" Height="30" HorizontalAlignment="Center" Margin="79,0,67,12" Name="btnCloud" VerticalAlignment="Bottom" Width="132" Click="btnCloud_Click" />
    </Grid>
</Window>
